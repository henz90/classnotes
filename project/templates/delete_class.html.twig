{% extends "master.html.twig" %}

{% block title %}Delete {{a.classname}}{% endblock %}

{% block head %}{% endblock %}

{% block content %}
    <div id="centerArticle">
        <h1 class="centered">{{a.classname}}</h1>
        <hr>
        <i>Posted by {{a.username}}</i>  
        <hr>
        <div class="body">{{a.body|raw}}</div>
        <hr>
        {% if userSession['userid'] == a.userid %}
        <form method="post" id="classForm">
            <p>Are you sure you want to <input type="submit" value="Delete"></p>
        </form>        
        <br>
        {% endif %}
    </div>
{% endblock %}