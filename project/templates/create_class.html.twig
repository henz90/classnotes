{% extends "master.html.twig" %}

{% block title %}Create a Class{% endblock %}

{% block head %}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({selector:'textarea'});</script>
{% endblock %}

{% block content %}

    {% if errorList %}
        <ul class="errorMessage">
        {% for error in errorList %}
            <li>{{error}}</li>
        {% endfor %}
        </ul>
    {% endif %}

    <form method="post" id="classForm">

        <label>Class Name</label>
        <input type="text" name="name" value="{{v.title}}" placeholder="Class Name">

        <label>Semester <i>OPTIONAL</i></label>
        <input type="text" name="semester" placeholder="Summer">

        <label>Year</label>
        <input type="number" name="year" placeholder=date("Y")>

        <label>Class Description</label>
        <textarea name="body" cols="60" rows="10">{{v.body}}</textarea><br>

        <input type="submit" value="Add Class">
    </form>
{% endblock %}