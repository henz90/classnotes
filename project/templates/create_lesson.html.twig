{% extends "master.html.twig" %}

{% block title %}Create a Lesson{% endblock %}

{% block head %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // alert("jQuery works");

            $(document).ajaxError(function(event, jqxhr, settings, thrownError) {
                console.log("Ajax error occured on " + settings.url);
                alert("Ajax error occured");
            });

        });
    </script>
{% endblock %}

{% block content %}

    {% if errorList %}
        <ul class="errorMessage">
        {% for error in errorList %}
            <li>{{error}}</li>
        {% endfor %}
        </ul>
    {% endif %}

    <form method="post" class="userForm">
        <label for="classinputid">Class ID</label>
        <input type="text" name="classinputid" id="classinputid" value="{{c.classid}}">
        <label for="year">Choose year</label>
        <select name="year" value="{{c.year}}" id="lesson_year">
            <option value="2020">2020</option>
        </select>
        <select name="semester" value="{{c.semester}}" id="lesson_semester">
            <option value="Spring">Spring</option>
        </select>
    </form>

{% endblock %}